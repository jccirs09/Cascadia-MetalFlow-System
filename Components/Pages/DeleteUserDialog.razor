@using Cascadia_MetalFlow_System.Data
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">Delete User</MudText>
    </TitleContent>
    <DialogContent>
        <MudText>Are you sure you want to delete the user "@User.Email"?</MudText>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Error" OnClick="Delete">Delete</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; } = default!;
    [Parameter] public ApplicationUser User { get; set; } = default!;

    private async Task Delete()
    {
        await UserManager.DeleteAsync(User);
        MudDialog.Close(DialogResult.Ok(true));
    }

    void Cancel() => MudDialog.Cancel();
}
