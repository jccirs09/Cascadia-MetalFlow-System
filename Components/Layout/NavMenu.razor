@implements IDisposable
@inject NavigationManager NavigationManager

<MudNavMenu>
    <MudNavLink Href="" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Home">Home</MudNavLink>

    <AuthorizeView Roles="@($"{RoleNames.Admin},{RoleNames.Manager},{RoleNames.Supervisor},{RoleNames.Driver}")" Context="systemPanelContext">
        <MudNavGroup Title="System Panel" Expanded="true">
            <AuthorizeView Roles="@RoleNames.Admin" Context="branchContext">
                <MudNavLink Href="company-branch-management" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.Business">Company Branches</MudNavLink>
            </AuthorizeView>
            <AuthorizeView Roles="@($"{RoleNames.Admin},{RoleNames.Manager}")" Context="userContext">
                <MudNavLink Href="user-management" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.People">User Management</MudNavLink>
            </AuthorizeView>
            <AuthorizeView Roles="@($"{RoleNames.Admin},{RoleNames.Manager},{RoleNames.Supervisor}")" Context="machineContext">
                <MudNavLink Href="machine-management" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.PrecisionManufacturing">Machine Management</MudNavLink>
            </AuthorizeView>
            <AuthorizeView Roles="@($"{RoleNames.Admin},{RoleNames.Manager},{RoleNames.Driver}")" Context="truckContext">
                <MudNavLink Href="delivery-truck-management" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.LocalShipping">Delivery Trucks</MudNavLink>
            </AuthorizeView>
        </MudNavGroup>
    </AuthorizeView>

    <AuthorizeView>
        <Authorized>
            <MudNavLink Href="Account/Manage" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.Person">@context.User.Identity?.Name</MudNavLink>
            <form action="Account/Logout" method="post">
                <AntiforgeryToken />
                <input type="hidden" name="ReturnUrl" value="@currentUrl" />
                <button type="submit" class="mud-nav-link mud-ripple">
                    <MudIcon Icon="@Icons.Material.Filled.Logout" Color="Color.Info" Class="mr-3"></MudIcon> Logout
                </button>
            </form>
        </Authorized>
        <NotAuthorized>
            <MudNavLink Href="Account/Login" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.Password">Login</MudNavLink>
        </NotAuthorized>
    </AuthorizeView>
</MudNavMenu>


@code {
    private string? currentUrl;

    protected override void OnInitialized()
    {
        currentUrl = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        NavigationManager.LocationChanged += OnLocationChanged;
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        currentUrl = NavigationManager.ToBaseRelativePath(e.Location);
        StateHasChanged();
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }
}
